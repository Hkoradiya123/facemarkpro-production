# Production environment example â€” copy to `.env` on the server and edit values
FLASK_APP=run.py
FLASK_ENV=production
SECRET_KEY=change_to_a_random_32+_char_string

# MongoDB (use a production URI, possibly with credentials)
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DB=attendance_db

# File paths (absolute paths recommended in production)
UPLOAD_FOLDER=/opt/faceapp/dataset
ENCODING_FILE=/opt/faceapp/encodings/face_encodings.pickle
TIMETABLE_FILE=/opt/faceapp/timetable.csv
ATTENDANCE_DIR=/var/log/faceapp/attendance_logs
SPLIT_DIR=/opt/faceapp/split_encodings

# Gunicorn
GUNICORN_WORKERS=3
GUNICORN_BIND=127.0.0.1:8000

# Face recognition tuning
FACE_RECOGNITION_TOLERANCE=0.85
FACE_RECOGNITION_MODEL=buffalo_l

# Optional: override the template/static folder locations (absolute recommended on server)
TEMPLATE_FOLDER=/opt/faceapp/app/templates
STATIC_FOLDER=/opt/faceapp/app/static
